generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(uuid())
  jabatan      String?
  username     String?
  name         String?
  nip          String?
  password     String
  status_mfa   Boolean @default(false)
  security     String  @default("kpusekadau")
  status_login Boolean @default(false)
  avatar       String?
  role         String  @default("user")
  token        String? @db.MediumText
  mfa_secret   String? @db.MediumText

  Absens    Absen[]
  index     Int?
  createdAt DateTime @default(now())
}

model Absen {
  id      String @id @default(uuid())
  userId  String
  user    User   @relation(fields: [userId], references: [id])
  status  String @default("tidak_hadir")
  img_ttd String @db.MediumText

  koordinat String?
  createdAt DateTime @default(now())
}
